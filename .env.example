# for Prisma
# formatt: postgresql://<user>:<password>@<localhost>:5432/<db_name>
# e.g.) postgresql://postgres:your_secure_password_here@db:5432/todo_app
DATABASE_URL="postgresql://postgres:your_secure_password_here@db:5432/todo_app"

# Database Password for Docker Compose
# IMPORTANT: If you change DB_PASSWORD, you MUST also update the password in DATABASE_URL above!
# if you are using compose.yaml (Local Development Env.), used default password. But set your password here if you want.
DB_PASSWORD="your_secure_password_here"

# for Next.js
NODE_ENV="production"  # production or development (for PRD Env. or Local Env.)
NEXT_TELEMETRY_DISABLED=1

# NextAuth.js Authentication Settings
AUTH_SECRET="your-auth-secret-here-please-change-this-to-random-string"
NEXTAUTH_URL="http://localhost:3000"  # or https://hep.local:3000 for HTTPS development

# OAuth Provider Settings (NextAuth.js v5 format)
# GitHub OAuth App: https://github.com/settings/developers
AUTH_GITHUB_ID="your-github-oauth-app-client-id"
AUTH_GITHUB_SECRET="your-github-oauth-app-client-secret"

# Google OAuth App: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-oauth-client-id.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# Development Debug (optional, remove in production)
AUTH_DEBUG="true"

# Docker User Settings
# Set these to your local user/group ID to avoid file permission issues
# Mac: USER_ID=501, GROUP_ID=20 (standard values)
# Linux: Run `id -u` and `id -g` to get your specific user/group IDs
# Default: 1000:1000 (common Linux default, works for most environments)
USER_ID=1000
GROUP_ID=1000
